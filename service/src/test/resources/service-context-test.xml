<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="teamDtoDao" class="com.zavadski.dao.TeamDtoDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="teamDtoService" class="com.zavadski.service.impl.TeamDtoServiceImpl">
        <constructor-arg name="teamDtoDao" ref="teamDtoDao"/>
    </bean>

    <bean id="teamDao" class="com.zavadski.dao.TeamDaoJDBCImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="teamService" class="com.zavadski.service.impl.TeamServiceImpl">
        <constructor-arg name="teamDao" ref="teamDao"/>
    </bean>


    <bean id="playerDtoDao" class="com.zavadski.dao.PlayerDtoDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="playerDtoService" class="com.zavadski.service.impl.PlayerDtoServiceImpl">
        <constructor-arg name="playerDtoDao" ref="playerDtoDao"/>
    </bean>

    <bean id="playerDao" class="com.zavadski.dao.PlayerDaoJDBCImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="playerService" class="com.zavadski.service.impl.PlayerServiceImpl">
        <constructor-arg name="playerDao" ref="playerDao"/>
    </bean>


    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath*:test-db.properties</value>
                <value>classpath*:sql-team.properties</value>
                <value>classpath*:sql-player.properties</value>
            </list>
        </property>
    </bean>
</beans>